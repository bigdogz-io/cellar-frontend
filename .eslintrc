{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
            "plugin:vue/essential",
            "@vue/airbnb"
    ],
    "rules": {
        "max-len": "off",
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
        "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["state"] }],
        "import/no-extraneous-dependencies": "off"
    },
    "parserOptions": {
        "parser": "babel-eslint"
    }
}
